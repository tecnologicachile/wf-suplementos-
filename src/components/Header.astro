---
---

<header class="sticky top-0 z-40 shadow-xl overflow-x-hidden">
	<!-- Main Header -->
	<div class="bg-gradient-to-r from-gray-900 to-gray-800 text-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex items-center justify-between h-16 md:h-20">
				<!-- Logo -->
				<div class="flex-shrink-0">
					<a href="/" class="block">
						<img src="/images/logo.png" alt="SUPLEMENTOS PRO" class="h-12 sm:h-14 md:h-16 w-auto transition-transform hover:scale-105" />
					</a>
				</div>
				
				<!-- Mobile Actions -->
				<div class="flex md:hidden items-center space-x-2">
					<!-- Mobile Search Button -->
					<button class="p-2 rounded-md hover:bg-gray-700 transition-colors" id="mobile-search-button">
						<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
							      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
						</svg>
					</button>
					
					<!-- Mobile Cart -->
					<a href="/carrito" class="relative p-2 rounded-md hover:bg-gray-700 transition-colors">
						<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
							      d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
						</svg>
						<span class="absolute -top-1 -right-1 bg-red-500 text-white rounded-full w-5 h-5 flex items-center 
						            justify-center text-xs font-bold">3</span>
					</a>
					
					<!-- Mobile Menu Button -->
					<button class="p-2 rounded-md hover:bg-gray-700 transition-colors" id="mobile-menu-button">
						<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
						</svg>
					</button>
				</div>
				
				<!-- Search Bar (Desktop) -->
				<div class="hidden lg:block flex-1 max-w-2xl mx-8">
					<form class="relative">
						<input 
							type="search" 
							placeholder="Buscar proteínas, creatina, vitaminas..." 
							class="w-full bg-gray-700/50 backdrop-blur text-white px-5 py-3 pr-12 rounded-full 
							       border border-gray-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 
							       focus:border-transparent focus:bg-gray-700 transition-all placeholder-gray-400"
						/>
						<button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2 
						                           text-gray-400 hover:text-yellow-400 transition-colors">
							<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
								      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
							</svg>
						</button>
					</form>
				</div>
				
				<!-- Navigation -->
				<nav class="hidden md:flex items-center space-x-6">
					<a href="/ofertas" class="text-gray-300 hover:text-yellow-400 transition-colors font-medium 
					                         flex items-center space-x-1">
						<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
							      d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
						</svg>
						<span>Ofertas</span>
					</a>
					<a href="/blog" class="text-gray-300 hover:text-yellow-400 transition-colors font-medium">Blog</a>
					<a href="/servicios" class="text-gray-300 hover:text-yellow-400 transition-colors font-medium">Servicios</a>
				</nav>
				
				<!-- User Actions -->
				<div class="hidden md:flex items-center space-x-4">
					<!-- Search Icon (Mobile) -->
					<button class="lg:hidden text-gray-300 hover:text-white transition-colors p-2">
						<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
							      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
						</svg>
					</button>
					
					<!-- User Account -->
					<button class="text-gray-300 hover:text-white transition-colors p-2">
						<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
							      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
						</svg>
					</button>
					
					<!-- Cart -->
					<a href="/carrito" class="flex items-center space-x-2 bg-yellow-400 text-gray-900 
					                         px-3 sm:px-4 py-2 rounded-full hover:bg-yellow-300 transition-all 
					                         font-medium group">
						<svg class="h-5 w-5 group-hover:scale-110 transition-transform" fill="none" 
						     stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
							      d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
						</svg>
						<span class="hidden sm:inline font-bold">Carrito</span>
						<span class="bg-red-500 text-white rounded-full w-5 h-5 flex items-center 
						            justify-center text-xs font-bold animate-pulse">3</span>
					</a>
				</div>
			</div>
		</div>
		
		<!-- Mobile Search Bar -->
		<div id="mobile-search-bar" class="hidden md:hidden border-t border-gray-700">
			<div class="p-4">
				<form class="relative">
					<input 
						type="search" 
						placeholder="Buscar productos..." 
						class="w-full bg-gray-700/50 text-white px-4 py-2 pr-10 rounded-lg 
						       border border-gray-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 
						       focus:border-transparent transition-all placeholder-gray-400"
					/>
					<button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 
					                           text-gray-400 hover:text-yellow-400 transition-colors">
						<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
							      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
						</svg>
					</button>
				</form>
			</div>
		</div>
	</div>
	
	<!-- Categories Menu -->
	<div class="bg-gray-800 border-t border-gray-700/50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<nav class="hidden md:block overflow-x-auto">
				<ul class="flex items-center justify-center flex-nowrap">
					<li class="group">
						<a href="/productos?categoria=proteinas" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">🥤 Proteínas</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
					<li class="border-l border-gray-700/50 group">
						<a href="/productos?categoria=creatina" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">💪 Creatina</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
					<li class="border-l border-gray-700/50 group">
						<a href="/productos?categoria=pre-entreno" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">⚡ Pre-Entreno</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
					<li class="border-l border-gray-700/50 group">
						<a href="/productos?categoria=aminoacidos" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">🧬 Aminoácidos</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
					<li class="border-l border-gray-700/50 group">
						<a href="/productos?categoria=vitaminas" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">💊 Vitaminas</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
					<li class="border-l border-gray-700/50 group">
						<a href="/productos?categoria=quemadores" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">🔥 Quemadores</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
					<li class="border-l border-gray-700/50 group">
						<a href="/productos?categoria=ganadores" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">📈 Ganadores</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
					<li class="border-l border-gray-700/50 group">
						<a href="/productos?categoria=snacks" 
						   class="block px-6 py-4 text-gray-300 hover:text-yellow-400 hover:bg-gray-700/30 
						          transition-all text-sm font-medium relative">
							<span class="relative z-10">🍫 Snacks</span>
							<div class="absolute bottom-0 left-0 right-0 h-0.5 bg-yellow-400 transform 
							            scale-x-0 group-hover:scale-x-100 transition-transform origin-center"></div>
						</a>
					</li>
				</ul>
			</nav>
			
			<!-- Quick Links Bar -->
			<div class="hidden md:flex items-center justify-center space-x-4 lg:space-x-8 py-2 text-xs border-t border-gray-700/30">
				<a href="/marcas" class="text-gray-400 hover:text-yellow-400 transition-colors whitespace-nowrap">
					Todas las Marcas
				</a>
				<span class="text-gray-600">•</span>
				<a href="/objetivos" class="text-gray-400 hover:text-yellow-400 transition-colors whitespace-nowrap">
					Por Objetivo
				</a>
				<span class="text-gray-600">•</span>
				<a href="/autenticidad" class="text-gray-400 hover:text-yellow-400 transition-colors whitespace-nowrap">
					Garantía de Autenticidad
				</a>
				<span class="text-gray-600">•</span>
				<a href="/productos" class="text-gray-400 hover:text-yellow-400 transition-colors font-medium whitespace-nowrap">
					Ver Todo el Catálogo →
				</a>
			</div>
		</div>
	</div>
	
	<!-- Mobile Menu -->
	<div id="mobile-menu" class="hidden fixed inset-0 z-50 md:hidden">
		<!-- Overlay -->
		<div class="fixed inset-0 bg-black bg-opacity-50" id="mobile-menu-overlay"></div>
		
		<!-- Menu Panel -->
		<div class="fixed right-0 top-0 h-full w-80 max-w-full bg-gray-900 shadow-xl transform transition-transform duration-300 translate-x-full" id="mobile-menu-panel">
			<div class="flex items-center justify-between p-4 border-b border-gray-700">
				<h2 class="text-xl font-bold text-white">Menú</h2>
				<button id="mobile-menu-close" class="p-2 rounded-md hover:bg-gray-700 transition-colors">
					<svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>
			
			<!-- Mobile Search -->
			<div class="p-4 border-b border-gray-700">
				<form class="relative">
					<input 
						type="search" 
						placeholder="Buscar productos..." 
						class="w-full bg-gray-800 text-white px-4 py-2 pr-10 rounded-lg 
						       border border-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-400 
						       focus:border-transparent transition-all"
